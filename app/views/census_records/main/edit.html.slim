.float-right.btn-group
  button.btn.btn-primary type="button" onclick="document.querySelector('form.simple_form')?.requestSubmit()" Save
  = link_to 'View', @record, class: 'btn btn-light'
  = link_to 'View All', resource_class, class: 'btn btn-light'
  - if can?(:destroy, @record)
    = link_to 'Delete', @record, method: :delete, class: 'btn btn-danger', data: { turbo_method: :delete, turbo_confirm: 'Are you sure? There is no undo.' }
h1.page-title= @record.name
= render 'shared/flag_resolution', item: @record
= render 'form'
