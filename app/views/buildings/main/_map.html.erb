<% if bot? %>
  <% nearby_buildings = @building.neighbors.includes(:addresses).limit(5) %>
  <% if nearby_buildings.any? %>
    <div id="building-list">
      <h3>Nearby Buildings</h3>
      <div class="list-group">
        <% nearby_buildings.each do |building| %>
          <div class="list-group-item building">
            <p>
              <%= link_to building.street_address, building_path(building), title: "Open building record" %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
<% else %>
  <div id="miniforge"></div>
  <script type="text/javascript">
      window.initialState = {
          layers: { center: {lat: <%= @building.lat %>, lng: <%= @building.lon %>}, layers: <%== mini_forge_layers.to_json %> },
          buildings: { buildings: <%== mini_forge_buildings.to_json %>, current: <%== @building.to_json %>, editable: <%== can?(:update, @building).to_json %>},
          search: { params: <%== params.to_json %> }
      }
  </script>

  <%= render 'shared/google_maps_loader' %>
<% end %>
